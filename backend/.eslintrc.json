{
   "env": {
      "browser": true,
      "es2021": true
   },
   "extends": ["standard"],
   "parser": "@typescript-eslint/parser",
   "parserOptions": {
      "ecmaVersion": 12,
      "sourceType": "module"
   },
   "plugins": ["@typescript-eslint"],
   "rules": {
      "semi": "off",
      "indent": "off",
      "@typescript-eslint/indent": "off",
      "comma-dangle": "off"
   }
}
