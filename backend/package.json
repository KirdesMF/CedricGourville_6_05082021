{
   "scripts": {
      "clear:cache": "rm -rf src/.cache",
      "start:mongo": "mongod",
      "start:ts": "rm -rf src/.cache && ts-node-dev --transpile-only --cache-directory src/.cache src/app.ts --watch",
      "start:dev": "concurrently \"npm run start:mongo \" \"sleep 3 && npm run start:ts \"",
      "start:prod": "rm -rf dist && tsc && NODE_ENV=production node dist/app.js"
   },
   "dependencies": {
      "concurrently": "^6.2.1",
      "dotenv": "^10.0.0",
      "express": "^4.17.1",
      "mongoose": "^5.13.5"
   },
   "devDependencies": {
      "@types/express": "^4.17.13",
      "@types/node": "^16.4.12",
      "@typescript-eslint/eslint-plugin": "^4.29.0",
      "@typescript-eslint/parser": "^4.29.0",
      "eslint": "^7.32.0",
      "eslint-config-standard": "^16.0.3",
      "eslint-plugin-import": "^2.23.4",
      "eslint-plugin-node": "^11.1.0",
      "eslint-plugin-promise": "^5.1.0",
      "ts-node": "^10.1.0",
      "ts-node-dev": "^1.1.8",
      "typescript": "^4.3.5"
   }
}
